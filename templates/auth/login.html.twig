{% extends ['auth/base.html.twig'] %}

{% block body %}
    <form action="{{ path('security_login') }}" novalidate="novalidate" method="post">
        <div class="row m-0">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3 mx-auto mt-3">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <div class="card login-form">
                            <div class="form-group">
                                <input type="text" id="username" name="_username" required="required" placeholder="Nazwa użytkownika" class="form-control" value="{{ last_username }}">
                            </div>
                            <div class="form-group">
                                <input type="password" id="password" name="_password" required="required" placeholder="Hasło" class="form-control">
                            </div>
                            <div class="form-group mt-4">
                                <a href="{{ path('recovery') }}" class="d-inline-block mt-1">Przypomnij hasło</a>
                                <button type="submit" id="Login" name="Login" class="btn-primary btn float-right">Login</button>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
